<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LibreDiagnostics.Updater.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
        x:Class="LibreDiagnostics.Updater.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Updating LibreDiagnostics"
        WindowStartupLocation="CenterScreen"
        Width="500" Height="300">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MockMainWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="20">
        <Grid RowDefinitions="Auto,Auto,Auto">
		    <TextBlock Grid.Row="0" Text="{Binding StatusText}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <ProgressBar Grid.Row="1" Height="20" Margin="10"
                         Minimum="0" Maximum="100"
                         Value="{Binding Progress}" />
		    <TextBlock Grid.Row="2" Text="{Binding Progress, StringFormat='{}{0:F0} %'}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>

</Window>
